<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context=".FiveActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/poppinssemibold"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Dashboard"
            android:layout_margin="7dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_train_24"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded"
        android:padding="15dp">


    <!-- Tombol untuk membuka halaman input rencana perjalanan -->
    <Button
        android:id="@+id/btnInputRencana"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_marginTop="5dp"
        android:text="Input Rencana Perjalanan"
        android:textStyle="bold"
        android:textSize="16dp"
        android:backgroundTint="@color/orange"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dataRencanaTerakhir"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:layout_height="wrap_content"
        android:text="Data Rencana Terakhir:"
        android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tanggalPerjalanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal :"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginRight="40dp" />
            <TextView
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX-XX-XXXX"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginRight="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/asalPerjalanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stasiun :"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginRight="48dp" />
            <TextView
                android:id="@+id/asal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asal"
                android:fontFamily="@font/poppinsregular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tujuanPerjalanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tujuan :"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginRight="52dp" />
            <TextView
                android:id="@+id/tujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tujuan"
                android:fontFamily="@font/poppinsregular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/kelasPerjalanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas :"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginRight="64dp" />
            <TextView
                android:id="@+id/kelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas"
                android:fontFamily="@font/poppinsregular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/penumpangPerjalanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penumpang :"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginRight="15dp" />
            <TextView
                android:id="@+id/penumpang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penumpang"
                android:fontFamily="@font/poppinsregular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/paketPerjalanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket :"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginRight="66dp" />
            <TextView
                android:id="@+id/paket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket"
                android:fontFamily="@font/poppinsregular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hargaPerjalanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga :"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginRight="60dp" />
            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:fontFamily="@font/poppinsregular" />
        </LinearLayout>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>